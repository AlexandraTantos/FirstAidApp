<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".PoisoningFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_poisoning_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is poisoning?\n\n•  Poisoning is injury or death due to swallowing, inhaling, touching or injecting various drugs, chemicals, venoms or gases. Many substances — such as drugs and carbon monoxide — are poisonous only in higher concentrations or dosages. And others — such as cleaners — are dangerous only if ingested. Children are particularly sensitive to even small amounts of certain drugs and chemicals."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="8dp"
                    android:padding="20dp"
                    android:gravity="start|top"/>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_poisoning_aid"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/poisoning_aid"
                android:layout_marginTop="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                android:layout_marginTop="16dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_poisoning_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Poisoning First Aid:\n\n1. Identify the type of poison if possible.\n\n2. Do not induce vomiting unless instructed by medical professionals.\n\n3. If the poison was inhaled, move the person to fresh air.\n\n4. If the poison was ingested, do not give them anything to eat or drink unless directed by a medical expert.\n\n5. Call poison control or emergency services immediately."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="8dp"
                    android:padding="20dp"
                    android:gravity="start|top" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
